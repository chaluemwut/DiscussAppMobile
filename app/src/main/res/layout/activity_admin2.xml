<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.administrator.discussapplication.LandingActivity"
    android:background="#ffdde4ee">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewAdmin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:layout_above="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout12" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/linearLayout7"
        android:background="#ffffffff">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:background="#ff6fb9ff"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageBack"
            android:src="@drawable/back"
            android:background="#ff6fb9ff"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginLeft="10dp" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_column="3"
                    android:src="@drawable/bt_id"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:id="@+id/NameUser"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:layout_column="4" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Systems"
                android:id="@+id/textView27"
                android:textColor="#ff173871"
                android:textSize="14dp"
                android:layout_column="4"
                android:gravity="left"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp" >

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageHome"
                android:layout_column="2"
                android:src="@drawable/home"
                android:background="#ff6fb9ff"
                android:focusableInTouchMode="false" />
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout12">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="เพิ่มกระทู้"
            android:id="@+id/textView41"
            android:layout_above="@+id/gridViewAdmin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/linearLayout8"
            android:layout_weight="1.2"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff5d8eff"
            android:textSize="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/editAddtopic"
            android:layout_toRightOf="@+id/textView41"
            android:layout_toLeftOf="@+id/btnAddtopic"
            android:layout_toStartOf="@+id/btnAddtopic"
            android:background="#ffffffff"
            android:layout_below="@+id/linearLayout8"
            android:layout_weight="0.6"
            android:autoText="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="ตกลง"
            android:id="@+id/btnAddtopic"
            android:layout_above="@+id/gridViewAdmin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#ffdde4ee"
            android:layout_below="@+id/linearLayout8"
            android:layout_weight="1.2"
            android:textColor="#ff173871"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>
