<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdde4ee">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout"
        android:background="#ffffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageLogo"
            android:src="@drawable/logo1_1"
            android:layout_gravity="center"
            android:layout_above="@+id/edtUserLog"
            android:layout_alignRight="@+id/checkBoxRe"
            android:layout_alignEnd="@+id/checkBoxRe"
            android:layout_marginBottom="40dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageUser"
            android:src="@drawable/bt_id"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="image2"
            android:layout_marginLeft="30dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagePassword"
            android:src="@drawable/bt_psw"
            android:layout_below="@+id/imageUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtUserLog"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:inputType="none"
            android:layout_toRightOf="@+id/imageUser"
            android:layout_toEndOf="@+id/imageUser"
            android:layout_marginLeft="10dp"
            android:background="#ffdde4ee"
            android:layout_alignTop="@+id/imageUser"
            android:layout_alignBottom="@+id/imageUser"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:hint="  Username"
            android:textColorHint="#ff97accc" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPassLog"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:layout_alignTop="@+id/imagePassword"
            android:layout_toRightOf="@+id/imagePassword"
            android:layout_toEndOf="@+id/imagePassword"
            android:layout_marginLeft="10dp"
            android:background="#ffdde4ee"
            android:layout_above="@+id/btnLogin"
            android:textSize="18dp"
            android:hint=" Password"
            android:textColorHint="#ff97accc" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/LOGIN"
            android:id="@+id/btnLogin"
            android:layout_gravity="center"
            android:background="#ffffb343"
            android:textSize="22sp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/imagePassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Password ?"
            android:id="@+id/checkBoxRe"
            android:checked="false"
            android:textSize="18dp"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:id="@+id/regis"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#ffff542a"
                android:clickable="false"
                android:layout_above="@+id/textView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="if you have no an account"
                android:id="@+id/textView"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

    </RelativeLayout><![CDATA[











    >





]]>
</RelativeLayout>
